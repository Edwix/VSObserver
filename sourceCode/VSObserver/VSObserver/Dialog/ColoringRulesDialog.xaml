<Window x:Class="VSObserver.Dialog.ColoringRulesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:nspace="clr-namespace:VSObserver"
        xmlns:converters="clr-namespace:VSObserver.Converters"
        Title="ColoringRulesDialog" Height="300" Width="300">
    <Window.Resources>
        <converters:StringToColor x:Key="ConvStringToColor" />
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Content="Regex :" Grid.Column="0" />
            <nspace:VSOTextBox Grid.Column="1" ShowNumberResult="False" AcceptsReturn="False" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Content="Color :" Grid.Column="0" />
            <ComboBox Grid.Column="1">
                <ComboBox.Resources>
                    <Style TargetType="ComboBox">
                        <Setter Property="ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" HorizontalAlignment="Stretch" Width="Auto" Height="50" />
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Width" Value="50" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Resources>

                <ComboBoxItem Content="" ToolTip="AliceBlue" Background="AliceBlue" />
                <ComboBoxItem Content="" ToolTip="AntiqueWhite" Background="AntiqueWhite" />
                <ComboBoxItem Content="" ToolTip="Azure" Background="Azure" />
                <ComboBoxItem Content="" ToolTip="Blue" Background="Blue" />
                <ComboBoxItem Content="" ToolTip="Chocolate" Background="Chocolate" />
            </ComboBox>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Content="Comment :" Grid.Column="0" />
            <TextBox AcceptsReturn="False" AcceptsTab="False" Grid.Column="1"/>
        </Grid>
        <Button Content="Add coloring rule" Command="{Binding AddColoringRule}"/>
        <ItemsControl ItemsSource="{Binding ListOfColoringRules}" >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" Orientation="Vertical" HorizontalAlignment="Stretch" Width="Auto"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="True">
                        <Label Content="Element : "  DockPanel.Dock="Left"/>
                        <ComboBox DockPanel.Dock="Right" IsEditable="True" Width="Auto" Text="{Binding Color, UpdateSourceTrigger=PropertyChanged}" 
                                  Background="{Binding Color, Converter={StaticResource ConvStringToColor}}">
                            <ComboBoxItem Content="AliceBlue"  ToolTip="AliceBlue" Background="AliceBlue" />
                            <ComboBoxItem Content="AntiqueWhite" ToolTip="AntiqueWhite" Background="AntiqueWhite" />
                            <ComboBoxItem Content="Azure" ToolTip="Azure" Background="Azure" />
                            <ComboBoxItem Content="Blue" ToolTip="Blue" Background="Blue" />
                            <ComboBoxItem Content="Chocolate" ToolTip="Chocolate" Background="Chocolate" />
                        </ComboBox>
                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Window>