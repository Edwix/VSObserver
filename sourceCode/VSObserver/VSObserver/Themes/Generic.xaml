<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VSObserver">

    <Style x:Key="{x:Type local:VSOTextBox}" TargetType="{x:Type local:VSOTextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type ComboBoxItem}" >
                    <Setter Property="Margin" Value="2, 2, 2, 0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                <Border Background="Transparent" x:Name="borderSelect">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Background="Aqua" Text="{TemplateBinding Content}" x:Name="nbElem"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
